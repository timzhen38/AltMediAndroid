<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="310dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="33dp"
        android:layout_marginTop="263dp"
        android:layout_marginEnd="33dp"
        android:text="Welcome"
        android:textAlignment="center"
        android:textAppearance="@style/welcome" />

    <TextView
        android:id="@+id/please_verify"
        android:layout_width="299dp"
        android:layout_height="62dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="62dp"
        android:layout_marginTop="310dp"
        android:layout_marginEnd="62dp"
        android:text="@string/please_verify"
        android:textAlignment="center"
        android:textAppearance="@style/please_verify" />

    <Button
        android:id="@+id/doneButton"
        android:layout_width="134dp"
        android:layout_height="46dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="125dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="125dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="504dp"
        android:drawable="@drawable/greendonebuttonshape"
        android:backgroundTint="#87DD7F"
        android:text="@string/done"
        android:textAppearance="@style/done"
        />

</RelativeLayout>